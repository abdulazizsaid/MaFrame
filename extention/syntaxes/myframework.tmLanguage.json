{
  "scopeName": "source.myframework-js",
  "patterns": [
    {
      "include": "source.js" 
    },
    {
      "match": "template\\s*:\\s*function\\(.*?\\)\\s*\\{\\s*return\\s*`",
      "name": "meta.template.start.myframework"
    },
    {
      "begin": "`",
      "end": "`",
      "name": "string.quoted.template.myframework",
      "patterns": [
        {
          "include": "text.html.basic"  
        },
        {
          "match": "\\{\\{.*?\\}\\}", 
          "name": "variable.interpolation.myframework"
        },
        {
          "match": "<[^>]+>", 
          "name": "entity.name.tag.html"
        },
        {
          "match": "style\\s*=\\s*\".*?\"", 
          "name": "entity.other.attribute-name.style.html"
        }
      ]
    }
  ]
}